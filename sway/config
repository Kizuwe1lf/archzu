set $mod Mod1
font pango:Roboto Mono Regular 12

# Shell
bindsym $mod+Return exec kitty 

# Managing 
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exit

# Focus window
bindsym $mod+j focus down
bindsym $mod+k focus up 
bindsym $mod+l focus right 
bindsym $mod+h focus left 

# Move window 
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up 
bindsym $mod+Shift+l move right 
bindsym $mod+Shift+h move left 

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle

# does the trick
bindsym $mod+Tab focus next
bindsym $mod+Shift+Tab focus prev

# Defining displays
set $D1 "DP-1"
set $D2 "DP-2"

# Configuring displays
output $D1 {
	mode 3840x2160@144Hz
	pos 0 0
}

output $D2 {
	mode 1920x1080@144Hz
	pos 3840 0
}

# Wallpaper
output $D1 bg ~/Pictures/throne_room.png fill 
output $D2 bg ~/Pictures/lorian.jpg fill 

# Defining workspaces
set $W1 "1"
set $W2 "2"
set $W3 "3"
set $W4 "4"
set $W5 "5"
set $W6 "6"

# Creating workspaces
workspace $W1 output $D1
workspace $W2 output $D1
workspace $W3 output $D1
workspace $W4 output $D2
workspace $W5 output $D2
workspace $W6 output $D2

# Focusing to a workspace
bindsym $mod+1 workspace number $W1
bindsym $mod+2 workspace number $W2
bindsym $mod+3 workspace number $W3
bindsym $mod+4 workspace number $W4
bindsym $mod+5 workspace number $W5
bindsym $mod+6 workspace number $W6

bindsym $mod+less workspace back_and_forth

# Move window to a workspace
bindsym $mod+Shift+1 move container to workspace number $W1
bindsym $mod+Shift+2 move container to workspace number $W2
bindsym $mod+Shift+3 move container to workspace number $W3
bindsym $mod+Shift+4 move container to workspace number $W4
bindsym $mod+Shift+5 move container to workspace number $W5
bindsym $mod+Shift+6 move container to workspace number $W6

# Application shortcuts
bindsym $mod+Shift+d exec vesktop 
bindsym $mod+Shift+s exec steam-native 
bindsym $mod+Ctrl+s exec steam
bindsym $mod+Shift+c exec chromium --ozone-platform=x11 --force-device-scale-factor=1.5
bindsym $mod+Ctrl+c exec chromium --ozone-platform=x11 --force-device-scale-factor=1
bindsym Ctrl+Print exec grimshot copy area 

# Cursor
seat <name> hide_cursor when-typing enable
seat <name> hide_cursor 15 

# Bar
exec waybar -c ~/.config/waybar/dp1/config -s ~/.config/waybar/dp1/style.css &
exec waybar -c ~/.config/waybar/dp2/config -s ~/.config/waybar/dp2/style.css &

## Misc 
input type:keyboard xkb_numlock enabled

exec gammastep -O 4500 &

for_window [class=".*"] opacity 0.92

default_border none
default_floating_border none
