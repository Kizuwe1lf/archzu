sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
yabai -m config window_shadow off

yabai -m space 1 --label space1 
yabai -m space 2 --label space2
yabai -m space 3 --label space3
yabai -m space 4 --label space4
yabai -m space 5 --label space5
yabai -m space 6 --label space6
yabai -m space 7 --label space7
yabai -m space 8 --label space8
yabai -m space 9 --label space9

yabai -m config layout bsp
yabai -m config auto_balance on
yabai -m config window_placement second_child
yabai -m config window_gap 4

# yabai -m rule --add app=".*Discord.*" space=space4

yabai -m rule --add app=".*Kitty.*" space=space1
yabai -m rule --add app=".*Chrome.*" space=space2
yabai -m rule --add app=".*Code.*" space=space3
yabai -m rule --add app=".*Slack.*" space=space4
yabai -m rule --add app=".*Unity.*" space=space5

yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app=".*Move.*" manage=off
yabai -m rule --add title="Welcome to.*" manage=off
yabai -m rule --add title="Preferences" manage=off
